<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="400dp"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:padding="16dp"
    android:background="@drawable/backgroundhomie2">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/Transaction_Btn_cancel"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/baseline_cancel_24"
        android:layout_gravity="end"
        >
    </com.google.android.material.imageview.ShapeableImageView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Transaction Details"
        android:textSize="22sp"
        android:layout_marginBottom="10dp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:fontFamily="@font/poppinsmedium"/>

    <!-- Task Description -->
    <EditText
        android:id="@+id/transaction_format_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter transaction description"
        android:textSize="18sp"
        android:layout_marginBottom="16dp"
        android:fontFamily="@font/poppinsmedium"/>

    <EditText
        android:id="@+id/transaction_format_amount"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:hint="Enter amount"
        android:textSize="18sp"
        android:layout_marginBottom="16dp"
        android:fontFamily="@font/poppinsmedium"/>

    <!-- Task Category -->
    <Spinner
        android:id="@+id/transaction_format_category_spinner"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:entries="@array/transactionItems"
        android:gravity="center"
        android:fontFamily="@font/poppinsmedium">

    </Spinner>





    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/addTransaction_BTN_confirm"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_marginBottom="5dp"
        android:text="Confirm"
        android:background="#62b90e"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/poppinsmedium">

    </androidx.appcompat.widget.AppCompatButton>





</LinearLayout>

