<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="5">

            <!-- First Layout with Weight 1 -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/row_RCV_dateMonths"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Jun"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:textColor="@color/greyLightText"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="5dp"
                    >
                </TextView>
                <TextView
                    android:id="@+id/row_RCV_dateDays"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="14"
                    android:textStyle="bold"
                    android:textSize="30sp"
                    android:textColor="#3571b4 "
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="4dp"
                    android:layout_marginVertical="0dp">

                </TextView>
            </LinearLayout>

            <!-- Second Layout with Weight 4 -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2.5"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/row_RCV_taskDescription"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="taking out the trash"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginBottom="3dp"
                    android:layout_marginTop="14dp"/>

                <TextView
                    android:id="@+id/row_RCV_taskCategory"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="category"
                    android:textStyle="normal"
                    android:textSize="16sp"
                    android:layout_marginBottom="5dp">

                </TextView>
                <!-- Content for Second Layout -->

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.5"
                android:orientation="horizontal">

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/row_BTN_taskDone"
                    android:layout_height="40dp"
                    android:layout_width="40dp"
                    android:src="@drawable/baseline_done_24"
                    android:scaleType="fitCenter"
                    android:layout_gravity="center"
                    android:layout_marginLeft="25dp">

                </com.google.android.material.imageview.ShapeableImageView>
                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/row_BTN_taskEdit"
                    android:layout_height="35dp"
                    android:layout_width="35dp"
                    android:src="@drawable/baseline_edit_24"
                    android:scaleType="fitCenter"
                    android:layout_gravity="center"
                    android:layout_marginStart="2dp">

                </com.google.android.material.imageview.ShapeableImageView>


            </LinearLayout>


        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_gravity="bottom"
            android:background="@color/greyLightText">
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>