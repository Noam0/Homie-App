<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.BudgetFragment"
    android:background="@drawable/backgroundhomie5">

    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >


        <LinearLayout
            android:id="@+id/Tasks_LL_headline"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="vertical"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Home Transactions"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:textSize="30sp"
                android:fontFamily="@font/poppinsmedium"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/sorting_LL"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@id/Tasks_LL_headline"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="22dp"
            android:gravity="center_horizontal"

            >



            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/buttonIncome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Income"
                android:textSize="16sp"
                android:textColor="#2D9596"
                android:fontFamily="@font/poppinsmedium"
                android:textStyle="bold"
                android:layout_marginHorizontal="12dp"
                >

            </com.google.android.material.textview.MaterialTextView>


            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/buttonOutCome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Expense"
                android:textColor="#2D9596"
                android:textSize="16sp"
                android:fontFamily="@font/poppinsmedium"
                android:textStyle="bold"
                android:layout_marginHorizontal="12dp"
                >

            </com.google.android.material.textview.MaterialTextView>

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/MTV_user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Member"
                android:textColor="#2D9596"
                android:textSize="16sp"
                android:fontFamily="@font/poppinsmedium"
                android:textStyle="bold"
                android:layout_marginHorizontal="12dp"
                >

            </com.google.android.material.textview.MaterialTextView>

        </LinearLayout>





        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/Budget_RCV_transactionRCV"
            android:layout_width="match_parent"
            android:layout_height="500dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="40dp"

            >


        </androidx.recyclerview.widget.RecyclerView>
    </androidx.constraintlayout.widget.ConstraintLayout>



    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/Budget_BTN_add"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/add_icon"
        android:layout_gravity="bottom|center"
        android:layout_marginBottom="80dp">

    </com.google.android.material.imageview.ShapeableImageView>


</FrameLayout>