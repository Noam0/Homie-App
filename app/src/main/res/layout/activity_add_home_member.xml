<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.addHomeMemberActivity"
    android:background="@drawable/backgroundhomie2">




    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:rowCount="5"
        android:columnCount="1">


        <com.google.android.material.textview.MaterialTextView
            android:text="Your QR code"
            android:textSize="30sp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:layout_marginTop="20dp">

        </com.google.android.material.textview.MaterialTextView>

        <ImageView
            android:id="@+id/AMA_IMG_QRCode"
            android:layout_height="300dp"
            android:layout_width="300dp"
            android:layout_gravity="center"
            android:src="@color/black"
            android:layout_marginTop="10dp">
        </ImageView>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/AMA_MTV_scan"
            android:text="scan qr code of your partner"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:clickable="true">

        </com.google.android.material.textview.MaterialTextView>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/SCAN_ACB_goBack"
            android:text="go back"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="40dp">
        </androidx.appcompat.widget.AppCompatButton>
    </GridLayout>

</RelativeLayout>