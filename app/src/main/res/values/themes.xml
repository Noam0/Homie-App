<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Homie" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.Homie" parent="Base.Theme.Homie" />

    <style name="AppTheme" parent="Theme.MaterialComponents.Light">
        <!-- Other theme attributes -->
        <item name="shapeAppearanceOverlay">@style/roundedImageView</item>
    </style>

    <style name="roundedImageView">
        <item name="cornerSize">50%</item>
        <item name="strokeColor">#FFFFFF</item> <!-- Stroke color -->
        <item name="strokeWidth">5dp</item> <!-- Stroke width -->
    </style>


    <style name="CustomLoginTheme" parent="FirebaseUI">
        <!-- Primary branding color -->
        <item name="colorPrimary">#00A19D</item>
        <!-- Dark variant of the primary color -->
        <item name="colorPrimaryDark">#007D79</item>
        <!-- Accent color -->
        <item name="colorAccent">#E05D5D</item>
        <!-- Text color -->
        <item name="android:textColorPrimary">@color/black</item>
        <!-- Secondary text color -->
        <item name="android:textColorSecondary">@color/black</item>
        <!-- Background color -->
        <item name="android:windowBackground">@drawable/loginthembackground</item>
        <!-- Button color -->
        <item name="colorButtonNormal">#E05D5D</item>
        <!-- Control activated color -->
        <item name="colorControlActivated">#E05D5D</item>

    </style>


</resources>